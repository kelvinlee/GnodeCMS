<%
	css.push("jquery.tagsinput") //为此页增加css
	js.push("jquery.tagsinput.min") //为此页增加 js
%>
<%_menu = "52area"%>
<%include header%>
<h3 class="header-text">星球列表 <span class="sub-header">所有星球的信息</span></h3>
<%breadcrumb.push({name:"星球列表"});%>
<%include breadcrumb%>
<div class="row">
	<div class="col-sm-12">
		<div class="smart-widget">
			<div class="smart-widget-inner">
				<div class="smart-widget-header">
					列表
					<span class="smart-widget-option">
						<span class="refresh-icon-animated">
							<i class="fa fa-circle-o-notch fa-spin"></i>
						</span>
						<a href="/admin/planet/new" class="widget-toggle-hidden-option">
							<i class="fa fa-plus"></i>
						</a>
					</span>
				</div>
				<div class="smart-widget-inner">
					<div class="smart-widget-body">
						<table class="table">
							<thead>
									<tr>
										<th>标题</th>
										<th>Url</th>
										<th>创建时间</th>
										<th style="width:20%">操作</th>
									</tr>
							</thead>
							<tbody>
								<% for (var i = 0; i < planet_list.length; i++) { %>
								<tr>
									<td><%=planet_list[i].title%></td>
									<td><%=planet_list[i].url%></td>
									<td><span class="badge badge-info"><%=helper.formatDate(planet_list[i].date)%></span></td>
									<td><a href="/planet/<%=planet_list[i].url%>">查看</a> | <a href="/admin/planet/<%=planet_list[i]._id%>">修改</a> | <a href="/admin/planet/del_post/<%=planet_list[i]._id%>" onclick="return removepost(this,function(){window.location.reload()})" title="<%=planet_list[i].title%>">删除</a></td>
								</tr>
								<% } %>
							</tbody>
						</table>
						
					</div>
				</div>
			</div><!-- ./smart-widget-inner -->
		</div>
	</div>
</div>

<%include footer%>