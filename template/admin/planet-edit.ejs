<%
	css.push("jquery.tagsinput") //为此页增加css
	js.push("jquery.tagsinput.min") //为此页增加 js
%>
<%_menu = "52area"%>
<%include header%>
<h3 class="header-text">星球信息 <span class="sub-header">星球的信息内容</span></h3>
<%
	breadcrumb.push({name:"星球列表",url:"/admin/planet"});
	breadcrumb.push({name:"编辑星球"});
%>
<%include breadcrumb%>
<div class="row user-profile-wrapper">
	<div class="col-sm-12">
		<div class="smart-widget">
			<div class="smart-widget-inner">
				<div class="smart-widget-body">
					<div class="tab-content">
						<div class="tab-pane fade active in" id="profileTab2">
							<h4 class="header-text m-top-md">星球信息</h4>
							<form class="form-horizontal m-top-md" name="planetpost" method="post" action="/admin/planet/edit_post/<%=planet._id%>">
									<div class="form-group">
											<label class="col-sm-2 control-label">标题</label>
											<div class="col-sm-6">
													<input type="text" name="title" class="form-control" value="<%=planet.title%>">
											</div>
									</div>
									<div class="form-group">
											<label class="col-sm-2 control-label">链接</label>
											<div class="col-sm-6">
													<!-- <div class="input-group"> -->
														<!-- <span class="input-group-addon"><%=config.host%>/page/</span> -->
														<input type="text" name="url" class="form-control" value="<%=planet.url%>">
													<!-- </div> -->
											</div>
									</div>
									<div class="form-group">
											<label class="col-sm-2 control-label">简介</label>
											<div class="col-sm-6">
													<input type="text" name="description" class="form-control" value="<%=planet.description%>">
													<!-- <textarea name="content" id="content" class="ckeditor"></textarea> -->
											</div>
									</div>
									<div class="form-group">
										<label class="col-lg-2 control-label">图片</label>
										<div class="col-lg-10">
											<input type="text" class="pics" id="pics" name="pics" value="<%=planet.pics%>">
										</div><!-- /.col -->
									</div><!-- /form-group -->
									<div class="form-group">
											<label class="col-sm-2 control-label">版权方</label>
											<div class="col-sm-6">
													<input type="text" name="author" class="form-control" value="<%=planet.author%>">
													<!-- <textarea name="content" id="content" class="ckeditor"></textarea> -->
											</div>
									</div>
									<div class="form-group">
											<label class="col-sm-2 control-label">国内/国外</label>
											<div class="col-sm-6">
													<input type="text" name="galaxy" class="form-control" value="<%=planet.galaxy%>">
													<!-- <textarea name="content" id="content" class="ckeditor"></textarea> -->
											</div>
									</div>
									<div class="form-group m-top-lg">
											<label class="col-sm-2 control-label"></label>
											<div class="col-sm-6">
													<a class="btn btn-default" onclick="post([name=planetpost])">更新</a>
													<input type="reset" class="btn btn-info m-left-xs" value="重置" />
											</div>
									</div>															
							</form>
						</div><!-- ./tab-pane -->
					</div><!-- ./tab-content -->
				</div><!-- ./smart-widget-body -->
			</div><!-- ./smart-widget-inner -->
		</div>
	</div>
</div>

<%include footer%>
