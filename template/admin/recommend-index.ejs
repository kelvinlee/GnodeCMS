<%
	// css.push("jquery.tagsinput") //为此页增加css
	// js.push("jquery.tagsinput.min") //为此页增加 js
%>
<%_menu = "52area-recommend"%>
<%include header%>
<h3 class="header-text">发现列表 <span class="sub-header">所有发现的信息</span></h3>
<%breadcrumb.push({name:"发现列表"});%>
<%include breadcrumb%>
<div class="row">
	<div class="col-sm-12">
		<div class="smart-widget">
			<div class="smart-widget-inner">
				<div class="smart-widget-header">
					列表
					<span class="smart-widget-option">
						<span class="refresh-icon-animated">
							<i class="fa fa-circle-o-notch fa-spin"></i>
						</span>
						<a href="/admin/planet/new" class="widget-toggle-hidden-option">
							<i class="fa fa-plus"></i>
						</a>
					</span>
				</div>
				<div class="smart-widget-inner">
					<div class="smart-widget-body">
						<table class="table">
							<thead>
									<tr>
										<th>Url</th>
										<th>Readed</th>
										<th>创建时间</th>
										<th style="width:20%">操作</th>
									</tr>
							</thead>
							<tbody>
								<% for (var i = 0; i < urls_list.length; i++) { %>
								<tr>
									<td><%=urls_list[i].url%></td>
									<td><%if (urls_list[i].readed){%><span class="badge badge-success">已阅</span><%}else{%><span class="badge badge-warning">未读</span><%}%></td>
									<td><span class="badge badge-info"><%=helper.formatDate(urls_list[i].create_at)%></span></td>
									<td><a href="<%=urls_list[i].url%>" target="_blank">查看</a> | <a href="javascript:void(0)" onclick="freepost('/admin/recommend/readed/<%=urls_list[i]._id%>',{readed:1},function(){window.location.reload()})">已阅</a></td>
								</tr>
								<% } %>
							</tbody>
						</table>
						
					</div>
				</div>
			</div><!-- ./smart-widget-inner -->
		</div>
	</div>
</div>

<%include footer%>