<%
	// css.push("homepage") //为此页增加css
	// js.push("homepage") //为此页增加 js
%>
<%_menu = "user"%>
<%include header%>
<h3 class="header-text">用户信息 <span class="sub-header">用户的信息内容</span></h3>
<%
	breadcrumb.push({name:"用户列表",url:"/admin/user"});
	breadcrumb.push({name:"用户信息"});
%>
<%include breadcrumb%>
<div class="row user-profile-wrapper">
	<div class="col-md-3 user-profile-sidebar m-bottom-md">
		<div class="row">
				<div class="col-sm-4 col-md-12">
						<div class="user-profile-pic">
								<img src="<%=user.avatar?user.avatar:"/admin/images/logo.jpg"%>" alt="">
								<div class="ribbon-wrapper">
										<div class="ribbon-inner shadow-pulse bg-success">
												<%=user.admin?"Admin":"Author"%>
										</div>
								</div>
						</div>
				</div>
				<div class="col-sm-6 col-md-12">
						<div class="user-name m-top-sm"><%=user.nickname?user.nickname:user.username%><i class="fa fa-circle text-success m-left-xs font-14"></i></div>

						<div class="m-top-sm">
								<div class="m-top-xs">
										<i class="fa fa-briefcase user-profile-icon"></i>
										<%=helper.formatDate(user.create_at,true)%>
								</div>
						</div>

						<h4 class="m-top-md m-bottom-sm">关于此用户</h4>
						<p class="m-top-sm">
								<%=user.nickname?user.nickname:user.username%> 创建于 <%=helper.formatDate(user.create_at,true)%>,最近一次评论是在 <%=helper.formatDate(user.read_comment,true)%>,发表过 ? 篇文章, 参与了 ?? 次讨论.
						</p>

				</div>
		</div><!-- ./row -->
</div>
	<div class="col-sm-9">
		<div class="smart-widget">
			<div class="smart-widget-inner">
				<div class="smart-widget-body">
					<div class="tab-content">
						<div class="tab-pane fade active in" id="profileTab2">
							<h4 class="header-text m-top-md">基本信息设置</h4>
							<form class="form-horizontal m-top-md" name="userpost" method="post" action="/admin/user/edit_post/<%=user._id%>">
									<div class="form-group">
											<label class="col-sm-3 control-label">用户名</label>
											<div class="col-sm-6">
													<input type="text" name="username" class="form-control" value="<%=user.username%>" readonly>
											</div>
									</div>
									<div class="form-group">
											<label class="col-sm-3 control-label">昵称</label>
											<div class="col-sm-6">
													<input type="text" name="nickname" class="form-control" value="<%= user.nickname?user.nickname:""%>">
											</div>
									</div>
									<div class="form-group">
											<label class="col-sm-3 control-label">性别</label>
											<div class="col-sm-6">
													<div class="radio inline-block">
															<div class="custom-radio m-right-xs">
																	<input type="radio" id="inlineRadio1" value="true" name="sex" <%=user.sex?"checked":""%>>
																	<label for="inlineRadio1"></label>
															</div>
															<div class="inline-block vertical-top">女士</div>
													</div>
													<div class="radio inline-block m-left-sm">
															<div class="custom-radio m-right-xs">
																	<input type="radio" id="inlineRadio2" value="false" name="sex" <%=user.sex?"":"checked"%> >
																	<label for="inlineRadio2"></label>
															</div>
															<div class="inline-block vertical-top">先生</div>
													</div>
											</div>
									</div>

									<div class="form-group">
											<label class="col-sm-3 control-label">电子邮箱</label>
											<div class="col-sm-6">
													<input type="text" name="email" class="form-control" value="<%= user.email?user.email:""%>">
											</div>
									</div>

									<div class="form-group">
											<label class="col-sm-3 control-label">手机号码</label>
											<div class="col-sm-6">
													<input type="text" name="mobile" class="form-control" value="<%= user.mobile?user.mobile:""%>">
											</div>
									</div>

									<h4 class="header-text m-top-lg">安全设置</h4>

									<!-- <div class="form-group">
											<label class="col-sm-3 control-label">安全问题</label>
											<div class="col-sm-6">
													<input type="text" class="form-control" value="">
											</div>
									</div> -->


									<div class="form-group">
											<label class="col-sm-3 control-label">是否激活</label>
											<div class="col-sm-6">
													<div class="m-top-xs">
															<div class="custom-checkbox">
																	<input type="checkbox" name="active" id="active" <%=user.active?"checked":""%>>
																	<label for="active"></label>
															</div>
													</div>
											</div>
									</div>

									<div class="form-group">
											<label class="col-sm-3 control-label">是否是管理员</label>
											<div class="col-sm-6">
													<div class="m-top-xs">
															<div class="custom-checkbox">
																	<input type="checkbox" name="admin" id="admin" <%=user.admin?"checked":""%>>
																	<label for="admin"></label>
															</div>
													</div>
											</div>
									</div>

									<div class="form-group m-top-lg">
											<label class="col-sm-3 control-label"></label>
											<div class="col-sm-6">
													<a class="btn btn-default" onclick="post([name=userpost])">修改</a>
													<input type="reset" class="btn btn-info m-left-xs" value="重置" />
											</div>
									</div>															
							</form>
						</div><!-- ./tab-pane -->
					</div><!-- ./tab-content -->
				</div><!-- ./smart-widget-body -->
			</div><!-- ./smart-widget-inner -->
		</div>
	</div>
</div>

<%include footer%>
